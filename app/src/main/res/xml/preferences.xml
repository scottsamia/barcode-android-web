<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:inputType="textUri"
        android:key="pref_url"
        android:defaultValue="@string/pref_default_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_url" />

    <EditTextPreference
        android:inputType="text"
        android:key="pref_JavaScriptCallBack"
        android:defaultValue="@string/pref_default_JavaScriptCallBack"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_JavaScriptCallBack" />

</PreferenceScreen>
